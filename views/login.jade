doctype html
html
  head
    title= title
  body
    form(method='post', action='/login', enctype='application/x-www-form-urlencoded')
      div
        div
          label 用户名
          input(type='text', name='username')
        div
          label 密码
          input(type='password', name='pw')
        if captcha
          div
            label 验证码
            input(type='text', name='code')
            img(width='100', height='50', src='/captcha.png')
      div
        input(type='submit')
      
